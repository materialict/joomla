<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="2.5.5"
    method="upgrade"
    client="site">
    <name>Featured Sportsvideo</name>
    <creationDate>April 2014</creationDate>
    <author>Dennis E.J. Vorst</author>
    <authorEmail>info@vorst-informatisering.nl</authorEmail>
    <authorUrl>http://www.vorst-informatisering.nl</authorUrl>
    <copyright>Copyright (C) 2014 Vorst Informatisering. All rights reserved.</copyright>
    <license>GNU GPL</license>
    <version>1.0.1</version>
    <description>Displays featured sportsvideo items.</description>
    <files>
        <filename module="mod_featured_sportsvideo">mod_featured_sportsvideo.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_featured_sportsvideo.ini</language>
    </languages>
    <media destination="mod_featured_sportsvideo" folder="media">
        <filename>index.html</filename>
        <folder>css</folder>
    </media>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="count"
                    type="text"
                    default="5"
                    label="MOD_FEATURED_SPORTSVIDEO_FIELD_COUNT_LABEL"
                    description="MOD_FEATURED_SPORTSVIDEO_FIELD_COUNT_DESC" />
                <field
                    name="imagewidth"
                    type="text"
                    default="320"
                    size="40"
                    label="MOD_FEATURED_SPORTSVIDEO_FIELD_IMAGEWIDTH_LABEL"
                    description="MOD_FEATURED_SPORTSVIDEO_FIELD_IMAGEWIDTH_DESC" />
            </fieldset>
            <fieldset name="advanced">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>