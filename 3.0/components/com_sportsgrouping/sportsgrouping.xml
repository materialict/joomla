<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="install">
    <name>com_sportsgrouping</name>
    <creationDate>April 2014</creationDate>
    <author>Dennis E.J. Vorst</author>
    <authorEmail>info@vorst-informatisering.nl</authorEmail>
    <authorUrl>http://www.vorst-informatisering.nl</authorUrl>
    <license>GNU GPL</license>    
    <version>1.0.0</version>
    <description>COM_SPORTSGROUPING_XML_DESCRIPTION</description>
    <scriptfile>script.php</scriptfile>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <files folder="site">
        <filename>index.html</filename>
        <filename>controller.php</filename>
        <filename>sportsgrouping.php</filename>
        <folder>controllers</folder>
        <folder>language</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>
    <administration>
        <menu img="class:categories">COM_SPORTSGROUPING_MENU</menu>
        
        <files folder="admin">
            <filename>index.html</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>sportsgrouping.php</filename>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        
        <languages folder="admin">
            <language tag="en-GB">language/en-GB/en-GB.com_sportsgrouping.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_sportsgrouping.sys.ini</language>
        </languages>
    </administration>
</extension>